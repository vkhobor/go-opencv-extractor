  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "serve",
        "-p",
        "7000",
        "--blob-storage",
        "./.tmp/blob",
        "--db",
        "./.tmp/db.sqlite3"
      ]
    },
    {
      "name": "Launch openapi cmd",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["openapi", "-p", "7575", "--output", "./doc"]
    }
  ]
}
